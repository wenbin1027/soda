<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="left">
	<LinearLayout android:id="@+id/LinearLayoutMainTop"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@color/white" android:orientation="horizontal">
		<Button android:text="@string/write" android:id="@+id/BtnWrite"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
		<TextView android:text="@string/username" android:id="@+id/TextViewUsername"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_centerInParent="true" android:background="@color/red"
			android:textColor="@color/black" android:layout_weight="1">
		</TextView>
		<Button android:text="@string/refresh" android:id="@+id/BtnRefresh"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
	</LinearLayout>
	<TableLayout android:id="@+id/TableLayoutInformation"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@color/white" android:layout_weight="1">
		<TextView android:text="@string/Msg" android:id="@+id/TextViewMsg01"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_centerInParent="true" android:background="@color/green"
			android:textColor="@color/black" android:layout_margin="4px"
			android:layout_weight="1">
		</TextView>
		<TextView android:text="@string/Msg" android:id="@+id/TextViewMsg02"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_centerInParent="true" android:background="@color/green"
			android:textColor="@color/black" android:layout_margin="4px"
			android:layout_weight="1">
		</TextView>
		<TextView android:text="@string/Msg" android:id="@+id/TextViewMsg03"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_centerInParent="true" android:background="@color/green"
			android:textColor="@color/black" android:layout_margin="4px"
			android:layout_weight="1">
		</TextView>
		<TextView android:text="@string/Msg" android:id="@+id/TextViewMsg04"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_centerInParent="true" android:background="@color/green"
			android:textColor="@color/black" android:layout_margin="4px"
			android:layout_weight="1">
		</TextView>
	</TableLayout>
	<LinearLayout android:id="@+id/LinearLayoutBottom"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@color/white" android:shrinkColumns="0"
		xmlns:android="http://schemas.android.com/apk/res/android">
		<Button android:text="@string/all" android:id="@+id/BtnAllMsg"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
		<Button android:text="@string/user1" android:id="@+id/BtnUser1Msg"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
		<Button android:text="@string/user2" android:id="@+id/BtnUser2Msg"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
		<Button android:text="@string/usermore" android:id="@+id/BtnUserMore"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
	</LinearLayout>
</LinearLayout>
