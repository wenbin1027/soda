<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayoutWrite"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="left"
	>

	<RelativeLayout android:id="@+id/LinearLayoutWriteTop"
		android:layout_width="fill_parent" android:layout_height="44dp"
		android:background="@drawable/titlebar_lightgray_bg"
		android:orientation="horizontal">
		<ImageButton android:id="@+id/Btnwriteback"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_alignParentLeft="true" android:background="@android:color/transparent"
			android:src="@drawable/back_button">
		</ImageButton>
		<TextView android:text="@string/writetitle" android:id="@+id/TextViewwritetitle"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textColor="@color/black" android:gravity="center"
			android:textSize="18sp">
		</TextView>
		<ImageButton android:text="@string/sendMsg" android:id="@+id/BtnSendMsg"
			android:layout_width="50dp" android:layout_height="fill_parent"
			android:layout_alignParentRight="true" android:background="@android:color/transparent"
			android:src="@drawable/send_button"
			>
		</ImageButton>
	</RelativeLayout>

	<EditText android:hint="@string/writeMsg" android:id="@+id/EditText"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textColor="@color/black" android:background="@color/white"
		 android:gravity="top|left"
		android:singleLine="false" android:layout_weight="1" android:autoText="true">
	</EditText>
	<ImageView android:id="@+id/shrinkPic" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@color/white"
		android:visibility="visible" android:layout_gravity="center_horizontal">
	</ImageView>

	<GridView android:id="@+id/facesView" android:layout_width="fill_parent"
		android:layout_height="150dp" android:visibility="gone"
		android:horizontalSpacing="5dp"
		android:verticalSpacing="10dp"
		android:scrollbars="vertical"
		android:numColumns="6" android:background="@color/gray">
	</GridView>
	
	<RelativeLayout android:id="@+id/LinearLayoutWriteBottom"
		android:layout_width="fill_parent" android:layout_height="44dp"
		android:background="@drawable/titlebar_lightgray_bg"
		android:orientation="horizontal">
		<ImageButton android:text="@string/img" android:id="@+id/BtnImg"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_alignParentLeft="true" android:background="@android:color/transparent"
			android:src="@drawable/pic_button">
		</ImageButton>
		<ImageButton android:text="@string/face" android:id="@+id/BtnFace"
			android:layout_width="50dp" android:layout_height="fill_parent"
			android:layout_alignParentRight="true" android:background="@android:color/transparent"
			android:src="@drawable/face_button">
		</ImageButton>

	</RelativeLayout>
</LinearLayout>
